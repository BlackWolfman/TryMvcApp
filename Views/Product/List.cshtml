
@model IEnumerable<TryMvcApp.Models.ProductModel>

@{
    Layout = "~/Views/Shared/_LayoutProducts.cshtml";
    ViewBag.Title = "Items list";
}

<div class="slider_banner items_list col-sm-offset-1 col-xs-12 col-sm-8">
    <h2>List of all products:</h2>

    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", "Product")
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.OldPrice, new { @style = "text-decoration:line-through;" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Amount)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = product.Id }, new { @style = "padding-right:4px;" })
                    
                    @if (User.IsInRole("Admin"))
                    {

                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = product.Id }, new { @style = "border-left:1px solid #000;padding-left:4px;padding-right:4px;" })
                        </div>
                        <div>
                            @Html.ActionLink("Delete", "Delete", new { id = product.Id }, new { @style = "border-left:1px solid #000;padding-left:4px;" })
                        </div>    
                    }
                </td>
            </tr>
        }

    </table>
</div>