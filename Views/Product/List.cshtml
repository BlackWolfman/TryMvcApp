@model IEnumerable<TryMvcApp.Models.ProductModel>

@{
    Layout = "~/Views/Shared/_LayoutProducts.cshtml";
    ViewBag.Title = "Items list";
}

<div class="slider_banner items_list col-sm-offset-1 col-xs-12 col-sm-8">
    <h2>List of all items:</h2>

    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", "Product")
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OldPrice, new { @style = "text-decoration:line-through;" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new {@style = "padding-right:4px;" }) 
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new{ id = item.Id }, new {@style = "border-left:1px solid #000;padding-left:4px;padding-right:4px;" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "border-left:1px solid #000;padding-left:4px;" }) 
                    }
                </td>
            </tr>
        }

    </table>
</div>